<?xml version="1.0" encoding="UTF-8"?>
<web-app 
    xmlns="http://xmlns.jcp.org/xml/ns/javaee" 
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee 
    http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
    version="4.0">

    <display-name>CourseCMS</display-name>

    <!-- Register Servlet -->
    <servlet>
        <servlet-name>RegisterServlet</servlet-name>
        <servlet-class>com.cms.controller.RegisterServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>RegisterServlet</servlet-name>
        <url-pattern>/RegisterServlet</url-pattern>
    </servlet-mapping>

    <!-- User Login Servlet -->
    <servlet>
        <servlet-name>UserLoginServlet</servlet-name>
        <servlet-class>com.cms.controller.UserLoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UserLoginServlet</servlet-name>
        <url-pattern>/UserLoginServlet</url-pattern>
    </servlet-mapping>

    <!-- Admin Login Servlet -->
    <servlet>
        <servlet-name>AdminLoginServlet</servlet-name>
        <servlet-class>com.cms.controller.AdminLoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AdminLoginServlet</servlet-name>
        <url-pattern>/AdminLoginServlet</url-pattern>
    </servlet-mapping>

    <!-- Purchase Servlet -->
    <servlet>
        <servlet-name>PurchaseServlet</servlet-name>
        <servlet-class>com.cms.controller.PurchaseServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>PurchaseServlet</servlet-name>
        <url-pattern>/PurchaseServlet</url-pattern>
    </servlet-mapping>
    
    <!-- Edit Course Servlet -->
<servlet>
    <servlet-name>EditCourseServlet</servlet-name>
    <servlet-class>com.cms.controller.EditCourseServlet</servlet-class>
</servlet>

<servlet-mapping>
    <servlet-name>EditCourseServlet</servlet-name>
    <url-pattern>/EditCourseServlet</url-pattern>
</servlet-mapping>

<!-- Toggle Status Servlet -->
<servlet>
    <servlet-name>ToggleStatusServlet</servlet-name>
    <servlet-class>com.cms.controller.ToggleStatusServlet</servlet-class>
</servlet>
<servlet-mapping>
    <servlet-name>ToggleStatusServlet</servlet-name>
    <url-pattern>/ToggleStatusServlet</url-pattern>
</servlet-mapping>





</web-app>
